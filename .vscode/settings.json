{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.envFile": "${workspaceFolder}/.env",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.languageServer": "Pylance",
    "autoDocstring.docstringFormat": "google",
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },
    "ty.disableLanguageServices": false,
    "mermaid-editor.preview.default": true,
    "markdown-mermaid.darkModeTheme": "dark",
    "files.associations": {
        "*.mmd": "mermaid"
    },
    "debugpy.debugJustMyCode": true,
    "debugpy.showPythonInlineValues": false,
    "geminicodeassist.outlines.automaticOutlineGeneration": true
}